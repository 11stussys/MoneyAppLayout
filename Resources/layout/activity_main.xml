<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Section One -->
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.2">
        <RelativeLayout
            android:background="@drawable/roundedEdges"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <Refractored.Controls.CircleImageView
                android:id="@+id/profileImage"
                android:src="@drawable/profile1"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <TextView
                android:id="@+id/nameTextView"
                android:text="Some Doll"
                android:textSize="16sp"
                android:textStyle="bold"
                fontPath="fonts/GlacialIndifference-Bold.ttf"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/cityTextView"
                android:text="New Jersey, USA"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_below="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/callSign"
                android:src="@drawable/phonecall"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <LinearLayout
                android:layout_below="@+id/cityTextView"
                android:layout_toRightOf="@+id/profileImage"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/starColor"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <ImageView
                    android:tint="@color/starColor"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <ImageView
                    android:tint="@color/starColor"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <ImageView
                    android:tint="@color/starColor"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <ImageView
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!-- Section Two -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22">
    
        <TextView
            android:text="Account Balance"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/balanceTextView"/>
        <TextView
            android:id="@+id/balanceTextView"
            android:text="32,200.98$"
            android:textSize="32sp"
            android:textStyle="bold"
            fontPath="fonts/GlacialIndifference-Bold.ttf"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!-- Section Three -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <RelativeLayout
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendImageView"
                android:src="@drawable/zd1"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:text="Przelewik do Julii"
                android:textStyle="bold"
                fontPath="fonts/GlacialIndifference-Bold.ttf"
                android:layout_toRightOf="@+id/friendImageView"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDateTextView"
                android:text="02-11-2022"
                android:layout_below="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:text="-$500.23"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="view"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/amountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendImageView"
                android:src="@drawable/zd2"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:text="Przelewik od Wariacika"
                fontPath="fonts/GlacialIndifference-Bold.ttf"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/friendImageView"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDateTextView"
                android:text="21-12-2022"
                android:layout_below="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:text="$1223.34"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorGreen"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="view"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/amountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendImageView"
                android:src="@drawable/zd3"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:text="Przelewik od Dzika"
                fontPath="fonts/GlacialIndifference-Bold.ttf"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/friendImageView"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDateTextView"
                android:text="01-01-2023"
                android:layout_below="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:text="$220.00"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorGreen"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="view"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/amountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/historyButton"
                    android:background="@drawable/roundedbutton"
                    android:drawableLeft="@drawable/history"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textAllCaps="false"
                    android:text="View History"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"/>
                <Button
                    android:id="@+id/transactionButton"
                    android:background="@drawable/roundedbutton"
                    android:textAllCaps="false"
                    android:text="New Transaction"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    
</LinearLayout>